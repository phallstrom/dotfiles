[user]
  name = Philip Hallstrom
  email = philip@pjkh.com
[core]
  excludesfile = ~/.gitignore
  trustctime = false
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  retcon = commit --amend
  rc = commit --amend --no-edit
  changelog = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lc = show --summary --format='Commit: %H%nAuthor: %an%n%n%s%n%n%b'
[color]
  status = auto
  branch = auto
  diff = auto
[push]
	default = current
[pull]
  default = matching
[branch]
  autosetuprebase = always
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  process = git-lfs filter-process
  required = true
[include]
  path = ~/.gitconfig_local
[diff]
	noprefix = true
